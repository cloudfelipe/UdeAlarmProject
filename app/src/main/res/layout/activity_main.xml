<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="udea.edu.co.udealarm.MainActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbarcustomstyle1"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Indicador de dB"
        android:gravity="center"
        android:textSize="20sp"
        android:id="@+id/indicatorLB"
        android:textStyle="bold"
        android:layout_above="@id/progress_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:layout_above="@id/indicatorLB"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:id="@+id/modeTx"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="40dB"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/progress_bar"
        android:id="@+id/decibelsLB"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15sp"
        android:layout_below="@id/decibelsLB"
        android:id="@+id/buttonsCal">

        <info.hoang8f.widget.FButton
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="+ balance"
            android:id="@+id/upButton"
            android:onClick="upBtnAction"
            android:visibility="invisible"

            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:layout_marginRight="20dp"
            fbutton:buttonColor="#2ecc71"
            fbutton:shadowColor="#27ae60"
            android:textColor="#ecf0f1"

            />

        <info.hoang8f.widget.FButton
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/upButton"
            android:layout_toEndOf="@id/upButton"
            android:text="- balance"
            android:id="@+id/downButton"
            android:onClick="downBtnAction"
            android:visibility="invisible"

            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            fbutton:buttonColor="#2ecc71"
            fbutton:shadowColor="#27ae60"
            android:textColor="#ecf0f1"
            />


    </RelativeLayout>

    <info.hoang8f.widget.FButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="5dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/buttonsCal"
        android:text="Guardar"
        android:textColor="#ecf0f1"
        android:id="@+id/saveCal"
        android:onClick="saveCalBtnAction"
        android:visibility="invisible"
        fbutton:buttonColor="#3498db"
        fbutton:shadowColor="#2980b9"

        android:layout_marginTop="15dp" />

</RelativeLayout>
